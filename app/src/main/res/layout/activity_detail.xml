<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/checkered_bg" />

    <android.support.v7.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="14dp"
        android:paddingLeft="20dp"
        android:layout_toLeftOf="@id/infoCardViewId">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/detailImageViewId"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/stripe_background" />

        </android.support.v7.widget.CardView>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/infoCardViewId"
        android:layout_width="258dp"
        android:layout_height="77dp"
        android:layout_toRightOf="@id/imageCardView"
        android:paddingLeft="20dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="20dp"></android.support.v7.widget.CardView>


</RelativeLayout>